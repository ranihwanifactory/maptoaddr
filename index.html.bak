            // Stash the event so it can be triggered later
            deferredPrompt = e;
            // Show the install button
            showInstallButton(true);
        });

        // Handle the install button click
        async function installApp() {
            console.log('üëç', 'butInstall-clicked');
            if (!deferredPrompt) {
                showToast('ÏÑ§ÏπòÍ∞Ä Ïù¥ÎØ∏ ÏôÑÎ£åÎêòÏóàÍ±∞ÎÇò ÏßÄÏõêÎêòÏßÄ ÏïäÎäî Î∏åÎùºÏö∞Ï†ÄÏûÖÎãàÎã§.', 'error');
                return;
            }

            // Show the install prompt
            deferredPrompt.prompt();
            
            // Wait for the user to respond to the prompt
            const { outcome } = await deferredPrompt.userChoice;
            console.log('üëç', 'userChoice', outcome);
            
            if (outcome === 'accepted') {
                showToast('Ïï± ÏÑ§ÏπòÍ∞Ä ÏôÑÎ£åÎêòÏóàÏäµÎãàÎã§! üéâ', 'success');
                console.log('üëç', 'User accepted the install prompt');
            } else {
                showToast('Ïï± ÏÑ§ÏπòÍ∞Ä Ï∑®ÏÜåÎêòÏóàÏäµÎãàÎã§.', 'error');
                console.log('üëç', 'User dismissed the install prompt');
            }
            
            // Clear the deferredPrompt
            deferredPrompt = null;
            // Hide the install button
            showInstallButton(false);
        }

        // Show/hide install button
        function showInstallButton(show) {
            if (elements.installBtn) {
                elements.installBtn.style.display = show ? 'flex' : 'none';
            }
        }

        // Listen for the app installed event
        window.addEventListener('appinstalled', (evt) => {
            console.log('üëç', 'appinstalled', evt);
            showToast('Ïï±Ïù¥ ÏÑ±Í≥µÏ†ÅÏúºÎ°ú ÏÑ§ÏπòÎêòÏóàÏäµÎãàÎã§! üöÄ', 'success');
            isInstalled = true;
            showInstallButton(false);
        });

        // Check if the app is already installed
        window.addEventListener('DOMContentLoaded', () => {
            // Check if running as PWA
            if (window.matchMedia('(display-mode: standalone)').matches || 
                window.navigator.standalone === true) {
                console.log('üëç', 'Running as PWA');
                isInstalled = true;
                showInstallButton(false);
            }
        });

        // Toast notification system
        function showToast(message, type = 'success') {
            elements.toastMessage.textContent = message;
            elements.toast.className = `toast ${type}`;
            
            // Update icon based on type
            const iconPath = type === 'success' 
                ? "M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                : "M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z";
            
            elements.toastIcon.innerHTML = `<path fill-rule="evenodd" d="${iconPath}" clip-rule="evenodd"/>`;
            
            elements.toast.classList.add('show');
            
            setTimeout(() => {
                elements.toast.classList.remove('show');
            }, 3000);
        }

        // Loading state management
        function showLoading(show = true) {
            elements.loading.style.display = show ? 'flex' : 'none';
        }

        // Modal system
        function showModal(message, title = 'ÏïåÎ¶º') {
            document.getElementById('modal-title').textContent = title;
            elements.modalMessage.textContent = message;
            elements.modal.style.display = 'block';
            
            // Focus management for accessibility
            elements.modal.querySelector('.close').focus();
        }

        function hideModal() {
            elements.modal.style.display = 'none';
        }

        // Event listeners for modal
        elements.modal.querySelector('.close').onclick = hideModal;
        window.onclick = function(event) {
            if (event.target === elements.modal) {
                hideModal();
            }
        };

        // Keyboard support for modal
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && elements.modal.style.display === 'block') {
                hideModal();
            }
        });

        // Address conversion with geocoding
        function setAddress(lat, lng) {
            geocoder.coord2Address(lng, lat, function(result, status) {
                if (status === kakao.maps.services.Status.OK) {
                    const addr = result[0].address.address_name;
                    elements.address.textContent = addr;
                    elements.address.style.background = 'rgba(219, 234, 254, 0.4)';
                    elements.address.style.borderColor = 'rgba(99, 102, 241, 0.3)';
                } else {
                    elements.address.textContent = 'Ï£ºÏÜåÎ•º Ï∞æÏùÑ Ïàò ÏóÜÏäµÎãàÎã§.';
                    elements.address.style.background = 'rgba(254, 226, 226, 0.4)';
                    elements.address.style.borderColor = 'rgba(239, 68, 68, 0.3)';
                }
            });
        }

        // Map click event with improved feedback
        kakao.maps.event.addListener(map, 'click', function(mouseEvent) {
            const latlng = mouseEvent.latLng;
            
            // Add bounce animation to marker
            marker.setPosition(latlng);
            marker.setMap(map);

            const lat = latlng.getLat().toFixed(6);
            const lng = latlng.getLng().toFixed(6);
            
            elements.lat.textContent = lat;
            elements.lng.textContent = lng;

            setAddress(lat, lng);
            
            // Provide audio feedback for screen readers
            const announcement = `ÏúÑÏπòÍ∞Ä ÏÑ†ÌÉùÎêòÏóàÏäµÎãàÎã§. ÏúÑÎèÑ ${lat}, Í≤ΩÎèÑ ${lng}`;
            elements.address.setAttribute('aria-label', announcement);
        });

        // Enhanced location sharing
        function shareLocation() {
            const lat = elements.lat.textContent;
            const lng = elements.lng.textContent;
            const content = elements.content.value;

            if (lat === 'ÏúÑÎèÑ' || lng === 'Í≤ΩÎèÑ') {
                showToast('ÏßÄÎèÑÏóêÏÑú ÏúÑÏπòÎ•º Î®ºÏ†Ä ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.', 'error');
                return;
            }

            const shareUrl = `${window.location.origin}${window.location.pathname}?lat=${lat}&lng=${lng}&content=${encodeURIComponent(content)}`;
            copyToClipboard(shareUrl);
        }

        // Enhanced Kakao sharing
        function shareKakao() {
            const lat = elements.lat.textContent;
            const lng = elements.lng.textContent;
            const content = elements.content.value;
            const addr = elements.address.textContent;

            if (lat === 'ÏúÑÎèÑ' || lng === 'Í≤ΩÎèÑ') {
                showToast('ÏßÄÎèÑÏóêÏÑú ÏúÑÏπòÎ•º Î®ºÏ†Ä ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.', 'error');
                return;
            }

            const shareUrl = `${window.location.origin}${window.location.pathname}?lat=${lat}&lng=${lng}&content=${encodeURIComponent(content)}`;

            try {
                Kakao.Link.sendDefault({
                    objectType: 'location',
                    address: addr,
                    addressTitle: 'üìç Í≥µÏú†Îêú ÏúÑÏπò',
                    content: {
                        title: 'üó∫Ô∏è ÏúÑÏπò Í≥µÏú†',
                        description: content || 'ÏúÑÏπò Ï†ïÎ≥¥Î•º ÌôïÏù∏Ìï¥Î≥¥ÏÑ∏Ïöî!',
                        imageUrl: 'https://maptoaddr.netlify.app/logo.png',
                        link: {
                            mobileWebUrl: shareUrl,
                            webUrl: shareUrl
                        }
                    },
                    buttons: [
                        {
                            title: 'ÏßÄÎèÑÏóêÏÑú Î≥¥Í∏∞',
                            link: {
                                mobileWebUrl: shareUrl,
                                webUrl: shareUrl
                            }
                        }
                    ]
                });
                showToast('Ïπ¥Ïπ¥Ïò§ÌÜ°ÏúºÎ°ú ÏúÑÏπòÎ•º Í≥µÏú†ÌñàÏäµÎãàÎã§!');
            } catch (error) {
                console.error('Kakao share error:', error);
                showToast('Ïπ¥Ïπ¥Ïò§ÌÜ° Í≥µÏú†Ïóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.', 'error');
            }
        }

        // Enhanced clipboard functionality
        async function copyToClipboard(text) {
            try {
                if (navigator.clipboard && window.isSecureContext) {
                    await navigator.clipboard.writeText(text);
                    showToast('ÎßÅÌÅ¨Í∞Ä ÌÅ¥Î¶ΩÎ≥¥ÎìúÏóê Î≥µÏÇ¨ÎêòÏóàÏäµÎãàÎã§! üìã');
                } else {
                    // Fallback for older browsers
                    const textArea = document.createElement('textarea');
                    textArea.value = text;
                    textArea.style.position = 'fixed';
                    textArea.style.opacity = '0';
                    document.body.appendChild(textArea);
                    textArea.focus();
                    textArea.select();
                    
                    const successful = document.execCommand('copy');
                    document.body.removeChild(textArea);
                    
                    if (successful) {
                        showToast('ÎßÅÌÅ¨Í∞Ä ÌÅ¥Î¶ΩÎ≥¥ÎìúÏóê Î≥µÏÇ¨ÎêòÏóàÏäµÎãàÎã§! üìã');
                    } else {
                        throw new Error('Clipboard copy failed');
                    }
                }
            } catch (error) {
                console.error('Clipboard error:', error);
                showToast('Î≥µÏÇ¨Ïóê Ïã§Ìå®ÌñàÏäµÎãàÎã§. Îã§Ïãú ÏãúÎèÑÌï¥Ï£ºÏÑ∏Ïöî.', 'error');
            }
        }

        // Enhanced geolocation
        function getCurrentLocation() {
            if (!navigator.geolocation) {
                showToast('Ïù¥ Î∏åÎùºÏö∞Ï†ÄÏóêÏÑúÎäî ÏúÑÏπò ÏÑúÎπÑÏä§Î•º ÏßÄÏõêÌïòÏßÄ ÏïäÏäµÎãàÎã§.', 'error');
                return;
            }

            showLoading(true);

            const options = {
                enableHighAccuracy: true,
                timeout: 10000,
                maximumAge: 30000
            };

            navigator.geolocation.getCurrentPosition(
                function(position) {
                    showLoading(false);
                    
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    const locPosition = new kakao.maps.LatLng(lat, lng);

                    marker.setPosition(locPosition);
                    marker.setMap(map);
                    map.setCenter(locPosition);

                    elements.lat.textContent = lat.toFixed(6);
                    elements.lng.textContent = lng.toFixed(6);
                    
                    setAddress(lat, lng);
                    showToast('ÌòÑÏû¨ ÏúÑÏπòÎ•º Ï∞æÏïòÏäµÎãàÎã§! üìç');
                },
                function(error) {
                    showLoading(false);
                    
                    let errorMessage = 'ÏúÑÏπòÎ•º Ï∞æÏùÑ Ïàò ÏóÜÏäµÎãàÎã§.';
                    switch(error.code) {
                        case error.PERMISSION_DENIED:
                            errorMessage = 'ÏúÑÏπò Ï†ëÍ∑º Í∂åÌïúÏù¥ Í±∞Î∂ÄÎêòÏóàÏäµÎãàÎã§.';
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMessage = 'ÏúÑÏπò Ï†ïÎ≥¥Î•º ÏÇ¨Ïö©Ìï† Ïàò ÏóÜÏäµÎãàÎã§.';
                            break;
                        case error.TIMEOUT:
                            errorMessage = 'ÏúÑÏπò Ï∞æÍ∏∞ ÏãúÍ∞ÑÏù¥ Ï¥àÍ≥ºÎêòÏóàÏäµÎãàÎã§.';
                            break;
                    }
                    
                    console.error('Geolocation error:', error);
                    showToast(errorMessage, 'error');
                },
                options
            );
        }

        // URL parameter handling
        function loadMarkerFromUrl() {
            const urlParams = new URLSearchParams(window.location.search);
            const lat = urlParams.get('lat');
            const lng = urlParams.get('lng');
            const content = urlParams.get('content');

            if (lat && lng) {
                const position = new kakao.maps.LatLng(lat, lng);
                marker.setPosition(position);
                marker.setMap(map);
                map.setCenter(position);

                elements.lat.textContent = parseFloat(lat).toFixed(6);
                elements.lng.textContent = parseFloat(lng).toFixed(6);
                elements.content.value = decodeURIComponent(content || '');
                
                setAddress(lat, lng);
                return true;
            }
            return false;
        }

        // External links
        function openMakerSite() {
            window.open('https://aibamsong2.tistory.com', '_blank', 'noopener,noreferrer');
        }

        // Initialize the application
        function initializeApp() {
            // Try to load from URL parameters first
            if (!loadMarkerFromUrl()) {
                // If no URL parameters, get current location
                getCurrentLocation();
            }
            
            // Add some UI polish
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        }

        // Service Worker registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('./serviceWorker.js')
                    .then(registration => {
                        console.log('Service worker registered:', registration);
                    })
                    .catch(error => {
                        console.log('Service worker registration failed:', error);
                    });
            });
        }

        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', initializeApp);
        
        // Fallback initialization
        window.onload = initializeApp;
    </script>
